<div class="modal" id="ban-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_for('', url: suggest_admin_topic_path(topic), method: "post", remote: true) do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
        <div class="radio">
          <label>
            <input type="radio" name="suggested_node" id="global" value="" checked>
            全局置顶
          </label>
        </div>
        <div class="radio">
          <label>
            <input type="radio" name="suggested_node" id="topic_node" value="<%=topic&.node_id%>">
            在节点内置顶
          </label>
        </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary">确定</button>
        <a class="btn btn-default" data-dismiss="modal">取消</a>
      </div>
      <% end %>
    </div>
  </div>
</div>
